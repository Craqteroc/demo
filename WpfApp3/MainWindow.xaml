<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label>Введите логин</Label>
            <TextBox x:Name="TbLogin" Height="25" Width="200" Margin="0,0,0,20" Background="White" Foreground="Black"  />
            <Label>Введите пароль</Label>
            <PasswordBox x:Name="PasswordBx" Width="200" Height="25" Margin="0,0,0,20" />
            <Button x:Name="BtLogin" Height="25" Width="200" Content="Войти" Click="BtLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
