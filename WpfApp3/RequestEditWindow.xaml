<Window x:Class="WpfApp3.RequestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="RequestEditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            
        
        <Label Content="Тип" />
        <TextBox x:Name="TypeBox" />

        <Label Content="Модель" />
        <TextBox x:Name="ModelBox" />

        <Label Content="Описание проблемы" />
        <TextBox x:Name="ProblemBox" />

        <Label Content="Статус ремонта" />
        <TextBox x:Name="StatusBox" />

        <Label Content="Этап ремонта" />
        <TextBox x:Name="PartsBox" />

        <Label Content="Мастер по ремонту"/>
        <ComboBox x:Name="CbMaster"/>

            <Button x:Name="SaveBt" Content="Сохранить" Click="SaveBt_Click" Margin="0,20,0,0" Height="25" Width="200" />
        </StackPanel>
    </Grid>
</Window>
