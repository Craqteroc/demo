<Window x:Class="WpfApp3.AddRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="AddRequestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <Label>Введите Дату</Label>
            <DatePicker x:Name="DatePic" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Label>Введите Тип</Label>
            <!--По хорошему отдельную таблицу и combobox-->
            <TextBox x:Name="TypeBt" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Label>Введите Модель</Label>
            <TextBox x:Name="ModelBt" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Label>Введите Проблему</Label>
            <TextBox x:Name="ProblemBt" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Label>Введите Мастера</Label>
            <ComboBox x:Name="MasterCb" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Label>Введите Клиента</Label>
            <ComboBox x:Name="ClientCb" Height="25" Width="200" Margin="0,0,0,10"/>
            
            <Button x:Name="AddRequestBt" Click="AddRequestBt_Click" Width="200" Height="25" Content="Добавить заявку"/>
        </StackPanel>
    </Grid>
</Window>
